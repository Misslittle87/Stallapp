<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stallapp.View.Contact"
             xmlns:model="clr-namespace:Stallapp.Model"
             Title="Contact">
    <CollectionView>
        <CollectionView.ItemsSource>
            <x:Array Type="{x:Type model:ContaktModel}">
                <model:ContactModel
                ContactFirstName="Sofia"
                Email="sofia@stallapp.com"/>
            </x:Array>
        </CollectionView.ItemsSource>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:ContactModel">
                    <HorizontalStackLayout>
                        <VerticalStackLayout>
                            <Label Text="{Binding ContactFirstName}" FontSize="20"/>
                            <Label Text="{Binding Email}" FontSize="20"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>