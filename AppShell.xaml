<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Stallapp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Stallapp"
    xmlns:view="clr-namespace:Stallapp.View">

    <TabBar>
        <ShellContent
            Title="Hem"
            ContentTemplate="{DataTemplate view:MainPage}"
            Icon="house_solid.svg"
        />
        
        <ShellContent
            Title="Calendar"
            ContentTemplate="{DataTemplate view:CalendarPage}"
            Icon="calendar_days_solid.svg"
        />

        <ShellContent
            Title="Person"
            ContentTemplate="{DataTemplate view:LoginPage}"
            Icon="person_solid.svg"
        />
    </TabBar>
    <FlyoutItem Title="Settings">
        <Tab Title="Settings"></Tab>
        <ShellContent ContentTemplate="{DataTemplate view:SettingsPage}" Route="SettingsPage" />
    </FlyoutItem>
</Shell>
