<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Stallapp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Stallapp"
    xmlns:view="clr-namespace:Stallapp.View">

    <TabBar>
        <Tab>
            <ShellContent
            Title="Avviseringar"
            ContentTemplate="{DataTemplate view:MainPage}"
            Icon="house_solid.svg"/>
        </Tab>
        <Tab>
            <ShellContent
            Title="Kalender"
            ContentTemplate="{DataTemplate view:CalendarPage}"
            Icon="calendar_days_solid.svg"/>
            <ShellContent
            Title="Poäng"/>
        </Tab>
        <Tab Title="Personer" Icon="person_solid.svg">
            <ShellContent
                Title="Person"
                ContentTemplate="{DataTemplate view:PersonPage}"/>
            <ShellContent
                Title="Häst"
                ContentTemplate="{DataTemplate view:HorsePage}"/>
        </Tab>
    </TabBar>
</Shell>
